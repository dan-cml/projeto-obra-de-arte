@model backend.Models.Cadastro

@{
    ViewData["Title"] = "Cadastro de usuário";
}

<style>

    * {
        margin: 0px;
        padding: 0px;
        box-sizing: border-box;
    }

    :root {
        --maisescura: #242424;
        --marrom: #595248;
        --azulclaro: #DCE4F2;
        --azulcinza: #A8B0BF;
        --cinza: #89888C;

        /* Para texto usar *light* e botões e menu *normal* */
        --fontetexto: 'Red Hat Display' ,'Times New Roman', Times, serif;
        --fontetitulo: 'Kanit','Times New Roman', Times, serif;
        /* Para título de obra *bold* e preço *light* */
        --fontearte: 'Jura','Times New Roman', Times, serif;
    }

    body {
        font-family: var(--fontetexto);
    }

    header {
        display: flex;
        justify-content: space-between;
        position: sticky;
        background-color: var(--maisescura);
        padding: 15px 7px 12px 0px;
        top: 0;
        left: 0;
        width: 100%;
    }

    header > div > a > span {
        background-color: var(--maisescura);
        color: rgba(255, 255, 255, 0.849);
        padding: 0px 6px;
    }

    nav {
        text-align: center;
        margin: 15px 0px;
    }

    nav > a {
        font-family: var(--fontetexto);
        font-weight: normal;
        text-decoration: none;
        color: var(--maisescura);
        padding: 15px;
    }

    nav > a.utilizando {
        color: var(--azulcinza);
    }


    main {
        margin-bottom: 30px;
        margin: auto;
    }

    main > section.texto {
        padding: 30px 20px 20px;
    }

    main > section.texto > h2 {
        font-family: var(--fontetexto);
        font-weight: bold;
        margin-bottom: 15px;
    }

    main > section.texto > p {
        font-family: var(--fontetexto);
        font-weight: lighter;
        font-size: 1.1em;
        margin-bottom: 21px;
    }

    main > section.texto > a.botao {
        border: 1px solid var(--marrom);
        border-radius: 20px;
        padding: 5px 10px;
        text-decoration: none;
        color: var(--marrom);
    }

    main > section.obras{
        display: flex;
        justify-content: center;
        margin-top: 50px;
    }

    main > section.obras > ul {
        list-style: none;
        columns: 2;
    }

    main > section.obras > ul > li > div {
        margin: 5px;
        margin-bottom: 20px;
    }

    main > section.obras > ul > li > div > div.areaobra {
        height: 210px;
        /* width: 200px; 
        Essa medida vai ter que ter quando for para outras telas*/
    }

    main > section.obras > ul > li > div > div > img {
        width: 150px;
        padding: 5px;
        border: 5px solid #323330;
        box-shadow: inset 3px 3px 3px #89888c93;
        box-shadow: 3px 3px 3px #89888c93;
    }

    main > section.obras > ul > li > div > div > a > img {
        width: 150px;
        padding: 5px;
        border: 5px solid #323330;
        box-shadow: inset 3px 3px 3px #89888c93;
        box-shadow: 3px 3px 3px #89888c93;
    }

    main > section.obras > ul > li > div > div {
        text-align: center;
        padding: 5px;
    }

    main > section > ul > li > div > div > p {
        padding: 5px;
    }

    main > section > ul > li > div > div > p.titulo {
        font-family: var(--fontearte);
        font-weight: bold;
    }

    main > section > ul > li > div > div > p.valor {
        font-family: var(--fontearte);
        font-weight: lighter;
    }

    main > section.obras > ul > li > div > div > hr {
        margin: auto;
        width: 20px;
    }

    main > a.botao {
        display: block;
        margin: auto;
        margin-bottom: 20px;
        margin-top: 20px;
        text-align: center;
        text-decoration: none;
        border: 1px solid #59524828;
        border-radius: 20px;
        width: 200px;
        color: #242424;
        box-shadow: 0px 0px 3px #24242444;
        padding: 3px;
    }

    hr {
        border-color: #2424241c;
    }

    footer {
        padding: 15px 0px;
    }

    footer > ul {
        list-style: none;
    }

    footer > ul > li {
        padding: 6px;
    }

    footer > ul > li > div {
        display: flex;
        justify-content: space-between;
    }

    footer > ul > li > div > a {
        text-decoration: none;
        color: var(--maisescura);
    }
</style>

<style>
    * {
