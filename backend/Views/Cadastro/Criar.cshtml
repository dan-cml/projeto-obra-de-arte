    main > section > form > input {
        border-color: var(--azulclaro);
        border-right: none;
        border-left: none;
        border-top: none;
        border-width: 1px;
        width: 60vw;
        height: 30px;
        font-size: .9em;
        margin: 6px;
    }

    main > section > form > select {
        border-color: var(--azulclaro);
        border-right: none;
        border-left: none;
        border-top: none;
        border-width: 1px;
        width: 60vw;
        height: 30px;
        font-size: .9em;
        margin: 6px;
        color: var(--cinza);
    }

    main > section.info > form > div {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

    main > section.info > form > div > input[type = submit] {
        width: 80px;
        border: 1px solid var(--marrom);
        border-radius: 20px;
        padding: 3px 10px;
        background-color: #89888c28;
    }

    main > section.info > form > div > div > label {
        font-size: .7em;
    }

    main > section.info > form > div > a {
        text-decoration: none;
        color: var(--cinza);
        font-size: .9em;
    }

    main > p {
        padding: 30px;
        text-align: center;
        font-size: .9em;
    }
</style>

