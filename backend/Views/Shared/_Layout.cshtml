    <link rel="stylesheet" href="~/backend.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="shortcut icon" href="../../../deifinicoes-visuais/favicon.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        * {
        margin: 0px;
        padding: 0px;
        box-sizing: border-box;
        }

        :root {
            --maisescura: #242424;
            --marrom: #595248;
            --azulclaro: #DCE4F2;
            --azulcinza: #A8B0BF;
            --cinza: #89888C;

            /* Para texto usar *light* e botões e menu *normal* */
            --fontetexto: 'Red Hat Display' ,'Times New Roman', Times, serif;
            --fontetitulo: 'Kanit','Times New Roman', Times, serif;
            /* Para título de obra *bold* e preço *light* */
            --fontearte: 'Jura','Times New Roman', Times, serif;
        }

        body {
            font-family: var(--fontetexto);
        }

        header {
            display: flex;
            justify-content: space-between;
            position: sticky;
            background-color: var(--maisescura);
            padding: 15px 7px 12px 0px;
            top: 0;
            left: 0;
            width: 100%;
        }

        header > div > a > span {
            background-color: var(--maisescura);
            color: rgba(255, 255, 255, 0.849);
            padding: 0px 6px;
        }

        nav {
            text-align: center;
            margin: 15px 0px;
        }

        nav > a {
            font-family: var(--fontetexto);
            font-weight: normal;
            text-decoration: none;
            color: var(--maisescura);
            padding: 15px;
        }

        nav > a.utilizando {
            color: var(--azulcinza);
        }       
    </style>
</head>
<body>
